@page "/main"
@inherits Services.UserCRUD
@using VietcombankClient.Pages.Admin
@using VietcombankClient.Pages.Customer

<CascadingAuthenticationState>
    <AuthorizeView Roles="Customer">
        <Authorized>
            <CustomerMain></CustomerMain>
        </Authorized>
    </AuthorizeView>
